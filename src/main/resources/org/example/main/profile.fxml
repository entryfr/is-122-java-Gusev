<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.main.controllers.ProfileController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>


    <Label text="Профиль пользователя" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <Label text="Имя пользователя:" minWidth="120"/>
        <TextField fx:id="usernameField" editable="false" prefWidth="200"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Email:" minWidth="120"/>
        <TextField fx:id="emailField" prefWidth="200"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Имя:" minWidth="120"/>
        <TextField fx:id="firstNameField" prefWidth="200"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Фамилия:" minWidth="120"/>
        <TextField fx:id="lastNameField" prefWidth="200"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Телефон:" minWidth="120"/>
        <TextField fx:id="phoneField" prefWidth="200"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Дата регистрации:" minWidth="120"/>
        <TextField fx:id="registrationDateField" editable="false" prefWidth="200"/>
    </HBox>


    <VBox fx:id="editControls" spacing="10" visible="false" managed="false">
        <Button fx:id="saveButton" text="Сохранить" onAction="#saveProfile"/>
        <Button fx:id="cancelButton" text="Отменить" onAction="#cancelEdit"/>
    </VBox>

    <HBox spacing="10">
        <Button fx:id="editButton" text="Редактировать" onAction="#toggleEditMode"/>
        <Button text="Выйти" onAction="#logout"/>
        <Button text="На главную" onAction="#backToIndex"/>
    </HBox>


    <Label text="Мои объявления" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
    <ListView fx:id="userAdsList" prefHeight="150"/>


    <Label text="Мои покупки" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
    <ListView fx:id="userPurchasesList" prefHeight="150"/>

</VBox>