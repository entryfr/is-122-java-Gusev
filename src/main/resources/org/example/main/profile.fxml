<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.main.controllers.ProfileController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Мой профиль" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="150.0"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="200.0"/>
        </columnConstraints>

        <Label text="Логин:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" editable="false"/>

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Имя:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="firstNameField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Фамилия:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="lastNameField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Телефон:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Дата регистрации:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="registrationDateField" GridPane.rowIndex="5" GridPane.columnIndex="1" editable="false"/>
    </GridPane>

    <Label text="Мои объявления:" style="-fx-font-weight: bold; -fx-padding: 10 0 5 0;"/>
    <ListView fx:id="userAdsList" VBox.vgrow="ALWAYS">
        <placeholder>
            <Label text="У вас пока нет объявлений"/>
        </placeholder>
    </ListView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Редактировать" fx:id="editButton" onAction="#toggleEditMode"/>
        <Button text="Выйти" onAction="#logout"/>
        <Button text="На главную" onAction="#backToIndex"/>
    </HBox>

    <VBox fx:id="editControls" spacing="10" alignment="CENTER_RIGHT">
        <Label text="Редактирование профиля" style="-fx-font-weight: bold;"/>
        <HBox spacing="10">
            <Button text="Сохранить" fx:id="saveButton" onAction="#saveProfile"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            <Button text="Отмена" fx:id="cancelButton" onAction="#cancelEdit"
                    style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        </HBox>
    </VBox>
</VBox>