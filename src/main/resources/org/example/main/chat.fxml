<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.main.controllers.ChatController">
    <!-- Заголовок -->
    <Label text="Чат" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    <Button text="×" onAction="#cancel" style="-fx-font-size: 20px; -fx-background-color: transparent; -fx-text-fill: #F44336;" />

    <!-- Левая панель: список чатов -->
    <SplitPane dividerPositions="0.3">
        <VBox>
            <Label text="Список чатов" style="-fx-font-size: 16px; -fx-padding: 5;" />
            <ListView fx:id="chatList" VBox.vgrow="ALWAYS" />
        </VBox>

        <!-- Правая панель: область сообщений -->
        <VBox spacing="10">
            <Label text="Сообщения" style="-fx-font-size: 16px; -fx-padding: 5;" />

            <!-- Область отображения сообщений -->
            <VBox fx:id="chatMessagesContainer" VBox.vgrow="ALWAYS" spacing="10" stylesheets="@../../css/styles.css">
                <!-- Сообщения будут динамически добавляться сюда через код -->
            </VBox>

            <!-- Поле ввода сообщений -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="messageInput" promptText="Введите сообщение..." HBox.hgrow="ALWAYS" />
                <Button text="Отправить" onAction="#sendMessage" />

            </HBox>
            <Button text="Отмена" onAction="#cancel" style="-fx-background-color: #F44336; -fx-text-fill: white;" />
        </VBox>
    </SplitPane>
</VBox>