<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.main.controllers.BasketController" style="-fx-background-color: #ffffff; -fx-padding: 30;">
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 0 0 20 0;">
        <Label text="Корзина" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" HBox.hgrow="ALWAYS"/>
        <Button text="×" onAction="#handleBackToIndex"
                style="-fx-font-size: 24px; -fx-background-color: transparent; -fx-text-fill: #666666;"/>
    </HBox>

    <ListView fx:id="basketList" style="-fx-pref-height: 400; -fx-border-color: #e0e0e0; -fx-border-radius: 4;">
        <placeholder>
            <Label text="Корзина пуста" style="-fx-text-fill: #666666; -fx-font-size: 16px;"/>
        </placeholder>
    </ListView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label text="Общая стоимость:" style="-fx-font-size: 16px; -fx-text-fill: #333333;"/>
        <Label fx:id="totalPriceLabel" text="0.00 руб." style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
    </HBox>

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Очистить корзину" onAction="#handleClearBasket"
                style="-fx-background-color: #e0e0e0; -fx-text-fill: #333333;"/>
        <Button text="Купить" onAction="#handleBuy"
                style="-fx-background-color: #333333; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="Вернуться к покупкам" onAction="#handleBackToIndex"
                style="-fx-background-color: #f5f5f5; -fx-text-fill: #333333;"/>
    </HBox>
</VBox>