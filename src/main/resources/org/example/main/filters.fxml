<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.main.controllers.FiltersController"
      spacing="10" style="-fx-padding: 15; -fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-width: 1;">
    <Label text="Фильтры объявлений" style="-fx-font-weight: bold; -fx-font-size: 14;"/>

    <Separator/>

    <Label text="Категория:"/>
    <ComboBox fx:id="categoryFilter" prefWidth="200"/>

    <Label text="Цена:"/>
    <HBox spacing="5">
        <TextField fx:id="minPriceFilter" promptText="от" prefWidth="80"/>
        <Label text="-"/>
        <TextField fx:id="maxPriceFilter" promptText="до" prefWidth="80"/>
    </HBox>

    <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
        <Button text="Применить" onAction="#applyFilters" style="-fx-base: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Сбросить" onAction="#resetFilters"/>
    </HBox>
</VBox>