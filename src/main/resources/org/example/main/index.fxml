<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.main.controllers.IndexController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Приветственная метка -->
    <Label fx:id="welcomeText" text="Добро пожаловать!" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Блок поиска -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Поиск товаров..." HBox.hgrow="ALWAYS" />
        <Button text="Поиск" onAction="#handleSearch" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        <Button fx:id="filterButton" text="Фильтры" onAction="#openFiltersDialog"/>
    </HBox>

    <!-- Список найденных объявлений -->
    <ListView fx:id="adsList" prefHeight="300" onMouseClicked="#handleAdDoubleClick" />

    <!-- Блок для отображения имени пользователя -->
    <HBox spacing="10" fx:id="userBlock" managed="false" visible="false" alignment="CENTER_RIGHT">
        <Label fx:id="usernameLabel" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
        <Button text="Выйти" onAction="#handleLogout" style="-fx-background-color: #F44336; -fx-text-fill: white;" />
        <!-- Кнопка корзины для авторизованных пользователей -->
        <Button text="Корзина" onAction="#openBasket" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
        <!-- Кнопка для перехода в чат -->
        <Button text="Чат" onAction="#openChatWindow" style="-fx-background-color: #FFC107; -fx-text-fill: black;" />
        <!-- В блоке userBlock, после других кнопок -->
        <Button text="База Данных" fx:id="adminButton" visible="false" onAction="#openDatabaseView"
                style="-fx-background-color: #607D8B; -fx-text-fill: white;" />
        <!-- Кнопка для перехода в профиль -->
        <Button text="Профиль" onAction="#openProfile" style="-fx-background-color: #673AB7; -fx-text-fill: white;" />
    </HBox>

    <!-- Блок для кнопок входа/регистрации -->
    <HBox spacing="10" fx:id="authBlock" managed="true" visible="true" alignment="CENTER_RIGHT">
        <Button text="Войти" onAction="#handleLogin" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
        <Button text="Зарегистрироваться" onAction="#handleRegister" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
    </HBox>

    <!-- Кнопка для создания объявления -->
    <Button text="Создать объявление" onAction="#createAd" style="-fx-background-color: #9C27B0; -fx-text-fill: white;" />
</VBox>